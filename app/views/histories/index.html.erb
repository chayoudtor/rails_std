<p id="notice"><%= notice %></p>

<h1>Histories</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Brand</th>
      <th>Product</th>
      <th>Amount</th>
      <th>Order</th>
      <th colspan="3">
        <%= form_tag(histories_path, method: :get) do %>
          <%= text_field_tag(:search) %>
          <%= select_tag(:option, options_for_select([["brand"], ["product"], ["amount"], ["order code", "order_code"]])) %>
          <%= submit_tag "search" %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.created_at %></td>
        <td><%= history.brand %></td>
        <td><%= history.product %></td>
        <td><%= history.amount %></td>
        <td><%= history.order_code %></td>
        <td><%= link_to 'Show', history %></td>
        <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= paginate @histories %>