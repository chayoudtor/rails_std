<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped bg-light rounded">
  <thead>
    <tr>
      <th><%= sortable "product" %></th>
      <th><%= sortable "brand" %></th>
      <th><%= sortable "amount" %></th>
      <th><%= sortable "status" %></th>
      <th colspan="3">
        <%= form_tag(orders_path, method: :get) do %>
          <%= text_field_tag :search,"", class: "form-control", placeholder: "search" %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product %></td>
        <td><%= order.brand %></td>
        <td><%= order.amount %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order, class: "btn btn-outline-dark btn-block" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-outline-dark btn-block" %></td>
        <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>