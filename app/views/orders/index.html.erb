<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Brand</th>
      <th>Amount</th>
      <th>Status</th>
      <th colspan="3">
        <%= form_tag(orders_path, method: :get) do %>
          <%= text_field_tag(:search) %>
          <%= select_tag(:option, options_for_select([["product"], ["brand"], ["amount"]])) %>
          <%= submit_tag "search" %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product %></td>
        <td><%= order.brand %></td>
        <td><%= order.amount %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>