<%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
  
        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :brand %>
      <%= form.text_field :brand, disabled: true %>
    </div>

    <div class="field">
      <%= form.label :status %>
      <%= form.select(:status, options_for_select([["Available"], ["Out of stock"]])) %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  